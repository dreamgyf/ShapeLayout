<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <com.dreamgyf.android.ui.widget.shape.ShapeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:cornerRadius="12dp"
        app:solid="@color/black" />

    <com.dreamgyf.android.ui.widget.shape.ShapeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="12dp"
        app:gradientEndColor="@android:color/holo_red_light"
        app:gradientStartColor="@android:color/holo_orange_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="渐变效果"
            android:textColor="@color/black" />

    </com.dreamgyf.android.ui.widget.shape.ShapeLayout>

    <com.dreamgyf.android.ui.widget.shape.ShapeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="边框效果"
            android:textColor="@color/black" />

    </com.dreamgyf.android.ui.widget.shape.ShapeLayout>

    <com.dreamgyf.android.ui.widget.shape.ShapeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeDashGap="2dp"
        app:strokeDashWidth="4dp"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="虚线边框效果"
            android:textColor="@color/black" />

    </com.dreamgyf.android.ui.widget.shape.ShapeLayout>

</LinearLayout>